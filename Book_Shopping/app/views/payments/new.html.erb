<div>
  <div>
    <h1>New Payment</h1>

    <% if @payment.errors.any? %>
      <div>
        <ul>
          <% @payment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form_for @payment do |f| %>
        <div class="field">
          <%= f.label :first_name%>
          <%= f.text_field :first_name%>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="field">
          <%= f.label :credit_card_number%>
          <%= f.text_field :credit_card_number %>
        </div>
        <div class="field">
          <%= f.label :expiration_month%>
          <%= f.select :expiration_month, months, {} %>
        </div>
        <div class="field">
          <%= f.label :expiration_year %>
          <%= f.select :expiration_year, years, {} %>
        </div>
        <div class="field">
          <%= f.label :card_security_code %>
          <%= f.text_field :card_security_code %>
        </div>
        <div class="field">
          <%= f.label :amount %>
          <%= f.number_field :amount, step: "1" %>
        </div>
        <div class="field">
          <%= f.submit "Charge Credit Card" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
